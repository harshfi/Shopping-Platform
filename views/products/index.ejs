<% layout ('layouts/boilerplate')-%>

<div class="row products">
    <%for(let product of products) {%>
       <div class="col-lg-4 mb-4 mt-5">
        <div class="card mx-auto shadow-sm text-center " style="width: 18rem;">
            <img src="<%= product.img %>" class="card-img-top" alt="...">
            <div class="card-body">
              <h5 class="card-title"><%= product.name %></h5>
              <p class="card-text"><%=product. desc.substring(0,50) %></p>
              <h5 class="card-title"> $<%= product.price  %></h5>
              <a href="/products/<%=product._id %>" class="btn btn-primary btn-small">Buy Now</a>
            </div>
          </div>
        </div>
        <% } %>

</div>
